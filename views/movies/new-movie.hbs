<h1>add movie</h1>

<form action="/movies/add-movie" method="POST">
    <label> Title:
        <input type="text" name="title" />
    </label>
    <br>

    <label> Genre:
        {{!-- <textarea type="text" name="content"> </textarea> --}}
        <input type="text" name="genre" />
    </label>
    <br>
    <label> Plot:
        <textarea type="text" name="plot"> </textarea>
        {{!-- <input type="text" name="title" /> --}}
    </label>
    <br>

    <label> Cast:
        <select name="cast" multiple>
            <option disable selected value=""></option>
            {{#each celebrities}}
            <option value="{{_id}}"> {{name}} </option>
            {{/each}}
        </select>
    </label>
    <br>

    <button type="submit">Add Movie</button>
</form>